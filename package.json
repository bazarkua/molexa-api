{
  "name": "molexa-backend",
  "version": "2.1.0",
  "description": "Enhanced backend proxy server for PubChem API access with educational features - production deployment for https://molexa-api.vercel.app/api",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "test": "node test-server.js",
    "test:educational": "node test-server.js",
    "validate": "node validate-setup.js",
    "debug:favicons": "node debug-favicons.js",
    "fix:favicons": "chmod +x quick-favicon-fix.sh && ./quick-favicon-fix.sh",
    "docs:serve": "node -e \"const express = require('express'); const app = express(); app.use(express.static('.')); app.listen(8080, () => console.log('Docs server: http://localhost:8080/api-docs.html'));\""
  },
  "keywords": [
    "pubchem",
    "chemistry",
    "molecular",
    "proxy",
    "cors",
    "api",
    "educational",
    "safety",
    "pharmacology",
    "pug-rest",
    "pug-view",
    "autocomplete",
    "molecular-properties",
    "drug-data",
    "toxicity",
    "chemical-education",
    "vercel",
    "serverless",
    "analytics",
    "real-time"
  ],
  "author": "Adilbek Bazarkulov",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "@vercel/analytics": "^1.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bazarkua/molexa-api"
  },
  "bugs": {
    "url": "https://github.com/bazarkua/molexa-api/issues"
  },
  "homepage": "https://molexa.org/api/docs",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/bazarkua"
  },
  "config": {
    "port": 3001,
    "cache_ttl": 86400,
    "autocomplete_cache_ttl": 3600,
    "rate_limit": 5,
    "base_url": "https://molexa.org/api"
  },
  "educational_features": {
    "pug_rest": "Enhanced molecular properties with educational context",
    "pug_view": "Rich textual annotations for safety, pharmacology, and properties",
    "autocomplete": "Chemical name suggestions for improved search experience",
    "safety_data": "Comprehensive toxicity and hazard information",
    "drug_data": "Pharmacological mechanisms and therapeutic information",
    "structure_visualization": "2D and 3D molecular structure support",
    "live_analytics": "Real-time usage monitoring and educational impact metrics"
  },
  "api_endpoints": {
    "base_url": "https://molexa.org/api",
    "documentation": {
      "interactive": "/api/docs",
      "json": "/api/json/docs",
      "dashboard": "/api/dashboard"
    },
    "core": {
      "health": "/api/health",
      "analytics": "/api/analytics",
      "analytics_stream": "/api/analytics/stream"
    },
    "educational": {
      "overview": "/api/pubchem/compound/{id}/educational",
      "safety": "/api/pugview/compound/{cid}/safety",
      "pharmacology": "/api/pugview/compound/{cid}/pharmacology",
      "properties": "/api/pugview/compound/{cid}/properties"
    },
    "search": {
      "autocomplete": "/api/autocomplete/{query}",
      "headings": "/api/pugview/headings/{topic}",
      "pubchem_proxy": "/api/pubchem/*"
    }
  },
  "deployment": {
    "platform": "vercel",
    "domain": "molexa.org",
    "api_base": "https://molexa.org/api",
    "frontend_base": "https://molexa.org",
    "status": "production"
  },
  "vercel": {
    "functions": {
      "api/index.js": {
        "maxDuration": 30
      }
    }
  }
}

{
  "name": "molexa-backend",
  "version": "2.0.0",
  "description": "Enhanced backend proxy server for PubChem API access with educational features - solves CORS issues for moleXa and provides comprehensive molecular education data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-server.js",
    "test:educational": "node test-server.js",
    "validate": "node validate-setup.js",
    "debug:favicons": "node debug-favicons.js",
    "fix:favicons": "chmod +x quick-favicon-fix.sh && ./quick-favicon-fix.sh",
    "docs:serve": "node -e \"const express = require('express'); const app = express(); app.use(express.static('.')); app.listen(8080, () => console.log('Docs server: http://localhost:8080/api-docs.html'));\""
  },
  "keywords": [
    "pubchem",
    "chemistry",
    "molecular",
    "proxy",
    "cors",
    "api",
    "educational",
    "safety",
    "pharmacology",
    "pug-rest",
    "pug-view",
    "autocomplete",
    "molecular-properties",
    "drug-data",
    "toxicity",
    "chemical-education"
  ],
  "author": "Adilbek Bazarkulov",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bazarkua/molexa-api"
  },
  "bugs": {
    "url": "https://github.com/bazarkua/molexa-api/issues"
  },
  "homepage": "https://github.com/bazarkua/molexa-api#readme",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/bazarkua"
  },
  "config": {
    "port": 3001,
    "cache_ttl": 86400,
    "autocomplete_cache_ttl": 3600,
    "rate_limit": 5
  },
  "educational_features": {
    "pug_rest": "Enhanced molecular properties with educational context",
    "pug_view": "Rich textual annotations for safety, pharmacology, and properties",
    "autocomplete": "Chemical name suggestions for improved search experience",
    "safety_data": "Comprehensive toxicity and hazard information",
    "drug_data": "Pharmacological mechanisms and therapeutic information",
    "structure_visualization": "2D and 3D molecular structure support"
  },
  "api_endpoints": {
    "health": "/health",
    "docs_interactive": "/docs",
    "docs_json": "/api/docs",
    "educational_overview": "/api/pubchem/compound/{id}/educational",
    "safety_annotations": "/api/pugview/compound/{cid}/safety",
    "pharmacology_data": "/api/pugview/compound/{cid}/pharmacology",
    "chemical_properties": "/api/pugview/compound/{cid}/properties",
    "autocomplete": "/api/autocomplete/{query}",
    "headings": "/api/pugview/headings/{topic}",
    "pubchem_proxy": "/api/pubchem/*"
  }
}
